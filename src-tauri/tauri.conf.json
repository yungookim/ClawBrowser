{
  "productName": "ClawBrowser",
  "version": "0.1.0",
  "identifier": "com.clawbrowser.app",
  "build": {
    "frontendDist": "../dist",
    "devUrl": "http://localhost:5173",
    "beforeDevCommand": "npm run dev:frontend",
    "beforeBuildCommand": "npm run build:frontend"
  },
  "app": {
    "windows": [
      {
        "title": "ClawBrowser",
        "width": 1280,
        "height": 800,
        "minWidth": 800,
        "minHeight": 600,
        "center": true
      }
    ],
    "security": {
      "csp": null
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "externalBin": ["sidecar/clawbrowser-agent", "sidecar/clawbrowser-agent-dev"]
  },
  "plugins": {
    "shell": {
      "open": true
    },
    "updater": {
      "active": false,
      "dialog": true,
      "endpoints": []
    }
  }
}
